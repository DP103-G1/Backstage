<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:padding="6dp"
    card_view:cardBackgroundColor="@color/cardBackground"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="53dp">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="106dp"
            android:layout_height="37dp"
            android:layout_marginStart="1dp"
            android:gravity="center"
            android:text="餐點名稱"
            android:textColor="@color/cardText"
            android:textSize="20dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.48" />

        <TextView
            android:id="@+id/tvkitchStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="27dp"
            android:text="製作中"
            android:textColor="@color/cardText"
            android:textSize="20sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@+id/btStatus"
            card_view:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btStatus"
            android:layout_width="89dp"
            android:layout_height="52dp"
            android:background="@color/colorTitle"
            android:text="未送出"
            android:textColor="@color/cardText"
            android:textSize="25dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="135dp"
            android:layout_marginEnd="8dp"
            android:text="0"
            android:textColor="@color/cardText"
            android:textSize="20sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@+id/textView3"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:text="份"
            android:textColor="@color/cardText"
            android:textSize="20sp"
            card_view:layout_constraintBaseline_toBaselineOf="@+id/tvAmount"
            card_view:layout_constraintStart_toEndOf="@+id/tvAmount" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>